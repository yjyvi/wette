<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.risenb.wette">

    <!-- 可用网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- WIFI网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 屏幕保持唤醒 不锁屏 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 调整多媒体音量 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!--************************************************ SD卡权限 ***********************************************-->
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- sdcard操作允许 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取SD卡数据 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--************************************************ SD卡权限 end ***********************************************-->


    <!--************************************************ 日历 ***********************************************-->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <!--************************************************ 日历 end ***********************************************-->


    <!--************************************************ 访问照相机 ***********************************************-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--************************************************ 访问照相机 end ***********************************************-->


    <!--************************************************ 联系人 ***********************************************-->
    <!-- 读联系人 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 写联系人 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!--************************************************ 联系人 end ***********************************************-->


    <!--************************************************ 位置 ***********************************************-->
    <!-- 访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 获取精确位置 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--************************************************ 位置 end ***********************************************-->

    <!--************************************************ 使用麦克风 ***********************************************-->
    <!-- 使用麦克风 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--************************************************ 使用麦克风 end ***********************************************-->

    <!--************************************************ 电话 ***********************************************-->
    <!-- 拨打电话权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 读取电话状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--************************************************ 电话 end ***********************************************-->


    <!--************************************************ 传感器 ***********************************************-->
    <!-- 传感器信息 -->
    <uses-permission android:name="android.permission.SENSOR_INFO" />
    <!-- 调用传感器 -->
    <uses-permission android:name="android.permission.SENSOR_ENABLE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <!--************************************************ 传感器 end ***********************************************-->


    <!--************************************************ 短信 ***********************************************-->
    <!--  发送消息-->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--  阅读消息-->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!--  写入消息-->
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <!-- 接收消息 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!--************************************************ 短信 end ***********************************************-->


    <!-- 振动-->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 录音-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:name="com.risenb.wette.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!-- ################################第三方 startGuideActivity########################### -->
        <!-- 兼容android 7.0 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.risenb.wette.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- 屏幕百分比布局设置 -->
        <meta-data
            android:name="design_width"
            android:value="750" />
        <meta-data
            android:name="design_height"
            android:value="1334" />

        <!--启动界面-->
        <activity android:name=".ui.HomeTableUI"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--主界面-->
        <!--<activity android:name=".ui.HomeTableUI" android:launchMode="singleTask"/>-->

        <!--向导界面-->
        <activity android:name=".ui.GuideUI"/>
        <activity android:name=".ui.home.ProductListUI"/>
        <activity android:name=".ui.home.PreductDetailsUI"/>

        <!-- 登录 -->
        <activity android:name=".ui.mine.LoginActivity"/>
        <!-- 注册 -->
        <activity android:name=".ui.mine.RegisterActivity"/>
        <!-- 找回密码 -->
        <activity android:name=".ui.mine.GetBackPwdActivity"/>
        <!-- 绑定手机 -->
        <activity android:name=".ui.mine.BindPhoneNumberActivity"/>

    </application>

</manifest>