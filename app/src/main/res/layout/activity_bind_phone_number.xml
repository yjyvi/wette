<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
            layout="@layout/common_title"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:textSize="30px"
            android:textColor="#1698d2"
            android:gravity="center_vertical"
            android:paddingLeft="70px"
            android:text="*为了您的账户安全，请验证手机号"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="12px"
            android:background="#f5f5f5"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="28px"
            android:paddingRight="28px">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30px"
                android:paddingLeft="46px"
                android:paddingRight="46px"
                android:orientation="vertical">

            <EditText
                    android:textSize="30px"
                    android:drawableLeft="@drawable/login_phone_number"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    style="@style/edit_text_login"
                    />

            <View
                    style="@style/common_line"/>

            <EditText
                    android:textSize="30px"
                    android:drawableLeft="@drawable/login_pwd"
                    android:hint="请输入密码 (6~16位字符)"
                    android:inputType="phone"
                    android:maxLength="11"
                    style="@style/edit_text_login"
                    />

            <View
                    style="@style/common_line"/>

        </LinearLayout>

        <TextView
                android:layout_marginTop="430px"
                style="@style/text_view_login_btn"
                android:text="完成"/>

    </LinearLayout>


</LinearLayout>