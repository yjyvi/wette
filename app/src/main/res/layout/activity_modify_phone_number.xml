<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/common_title"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

        <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/translate"
                android:hint="请输入您的新手机号"
                android:textSize="30px"
                android:textColor="#999999"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/login_phone_number"/>


        <View
                style="@style/common_line"/>

       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

           <EditText
                   android:id="@+id/et_validate_code"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="100px"
                   android:background="@color/translate"
                   android:hint="验证码"
                   android:textSize="30px"
                   android:textColor="#999999"
                   android:drawablePadding="8dp"
                   android:drawableLeft="@drawable/register_validate_code"/>
           
           
           <TextView
                   android:id="@+id/tv_validate_code"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:textColor="#666666"
                   android:textSize="28px"
                   android:text="发送验证码"/>
           
       </LinearLayout>

        <View
                style="@style/common_line"/>

    </LinearLayout>
    
    <TextView
            android:id="@+id/tv_finish"
            style="@style/text_view_login_btn"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:text="完成"
            android:layout_marginTop="360px"/>

</LinearLayout>