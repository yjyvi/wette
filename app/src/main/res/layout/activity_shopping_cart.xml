<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_title"/>


    <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:paddingRight="20px"
            android:gravity="center_vertical|right"
            android:background="#f5f5f5"
            android:textSize="28px"
            android:textColor="#333333"
            android:text="删除"
            android:visibility="gone"
            />

    <com.lengzhuo.xybh.views.refreshlayout.MyRefreshLayout
            android:id="@+id/rl_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

    </com.lengzhuo.xybh.views.refreshlayout.MyRefreshLayout>


    <View
            style="@style/common_line"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:orientation="horizontal"
            android:gravity="center_vertical">


        <LinearLayout
                android:id="@+id/ll_all_selected"
                android:tag="unSelected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/iv_all_selected"
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:src="@drawable/shopping_cart_unselected"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textSize="28px"
                    android:textColor="#333333"
                    android:text="全选"/>

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20px"
                android:orientation="vertical"
                android:gravity="right|center_vertical"
                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28px"
                        android:textColor="#333333"
                        android:text="合计:"/>

                <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="34px"
                        android:textColor="#ea2222"
                        android:text="¥0.00"/>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="#999999"
                    android:text="不含运费，不含进口税"/>

        </LinearLayout>

        <TextView
                android:id="@+id/tv_settlement"
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ee4716"
                android:textSize="30px"
                android:textColor="@color/white"
                android:text="结算(0)"/>


    </LinearLayout>

</LinearLayout>
