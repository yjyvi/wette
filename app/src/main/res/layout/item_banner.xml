<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="380px">

        <!-- ViewPager -->
        <android.support.v4.view.ViewPager
            android:background="@color/gray"
            android:id="@+id/vp_item_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_item_banner"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <!-- 标题 -->
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/ll_item_banner_title"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:textColor="@color/white"/>

            <!-- ViewPager 指示器 -->
            <com.risenb.wette.views.MyViewPagerIndicator
                android:id="@+id/vpi_item_banner_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10px"
                android:layout_marginRight="20px">
            </com.risenb.wette.views.MyViewPagerIndicator>

        </FrameLayout>

    </FrameLayout>

    <View
        android:id="@+id/v_item_home_page_banner_holder"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/common_bg"/>

</LinearLayout>